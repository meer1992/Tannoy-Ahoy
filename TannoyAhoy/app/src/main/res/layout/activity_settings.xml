<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/tannoy_white_blue"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:clickable="false">

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Update announcements over wifi only"
        android:layout_marginBottom="5dp"
        android:textColor="@color/tannoy_black"
        android:background="@color/tannoy_light_blue"
        android:id="@+id/checkBox1"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="5dp"
        android:text="Let Tannoy Ahoy! use your GPS location"
        android:textColor="@color/tannoy_black"
        android:background="@color/tannoy_light_blue"
        android:id="@+id/checkBox"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:checked="true"
        />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="5dp"
        android:text="Let Tannoy Ahoy! give you notifications"
        android:textColor="@color/tannoy_black"
        android:background="@color/tannoy_light_blue"
        android:id="@+id/checkBox3"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:checked="true"
        />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Auto update announcements list (default is 10 seconds)"
        android:layout_marginBottom="5dp"
        android:textColor="@color/tannoy_black"
        android:background="@color/tannoy_light_blue"
        android:id="@+id/checkBox2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:checked="true"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:background="@color/tannoy_light_blue"
        android:layout_marginLeft="35dp" />

</LinearLayout>
