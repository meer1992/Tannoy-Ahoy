<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/tannoy_light_blue"
                android:endColor="@color/tannoy_dark_blue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/tannoy_grey" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/tannoy_light_blue"
                android:startColor="@color/tannoy_dark_blue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/tannoy_grey" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/tannoy_dark_blue"
                android:startColor="@color/tannoy_dark_blue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/tannoy_grey" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>