<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:inset="5dp">
        <shape>
            <gradient
                android:startColor="@color/tannoy_semi_white"
                android:endColor="@color/tannoy_semi_blue"
                android:angle="270" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        </inset>
    </item>

    <item android:state_focused="true" >
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:inset="5dp">
        <shape>
            <gradient
                android:endColor="@color/tannoy_semi_white"
                android:startColor="@color/tannoy_semi_blue"
                android:angle="270" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        </inset>
    </item>

    <item>
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:inset="5dp">
        <shape>
            <gradient
                android:endColor="@color/tannoy_light_blue"
                android:startColor="@color/tannoy_light_blue"
                android:angle="270" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        </inset>
    </item>
</selector>