    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="center|top"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Auckland Airport"
            android:id="@+id/textView4"
            android:layout_marginBottom="25dp"
            android:textColor="@color/tannoy_white"
            android:background="@color/tannoy_dark_blue"
            android:paddingTop="5dp"
            android:gravity="start"
            android:paddingStart="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10.10am - Air New Zealand NZ08 gate changed from gate 19 to gate 5"
            android:id="@+id/textView5"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textColor="@color/tannoy_black"
            android:background="@color/tannoy_light_blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10.07am - Last call for John Doe for QA23 please go to gate 15 immediately"
            android:id="@+id/textView7"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textColor="@color/tannoy_black"
            android:background="@color/tannoy_light_blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10.00am - Singapore Airlines SG03 gate changed from gate 3 to gate 4"
            android:id="@+id/textView6"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textColor="@color/tannoy_black"
            android:background="@color/tannoy_light_blue" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="Login"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announce"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|bottom"
            android:layout_columnWeight="1" />

        <Button
            android:id="@+id/btnAbout"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:text="About"
            android:onClick="gotoAbout"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1" />
    </GridLayout>

</LinearLayout>