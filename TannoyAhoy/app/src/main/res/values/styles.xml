<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>
    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/tannoy_dark_blue</item>

        <!-- Compatibility -->
        <item name="background">@color/tannoy_dark_blue</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/tannoy_white</item>
        <item name="android:background">@color/tannoy_dark_blue</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@color/tannoy_dark_blue</item>
    </style>

    <style name="CustomCheckBox">
        <item name="android:theme">@style/CheckBoxAppTheme</item>
    </style>

    <style name="CheckBoxAppTheme">
        <item name="android:colorAccent">
            @color/tannoy_dark_blue
        </item>
        <item name="android:colorControlNormal">
            @color/tannoy_dark_blue
        </item>
        <item name="android:colorControlHighlight">
            @color/tannoy_grey
        </item>
        <item name="android:colorControlActivated">
            @color/tannoy_dark_blue
        </item>
    </style>

    <style name="CustomSpinner">
        <item name="android:theme">@style/SpinnerAppTheme</item>
    </style>

    <style name="SpinnerAppTheme">

        <item name="android:colorControlNormal">
            @color/tannoy_dark_blue
        </item>
        <item name="android:colorControlHighlight">
            @color/tannoy_grey
        </item>
        <item name="android:colorControlActivated">
            @color/tannoy_dark_blue
        </item>
    </style>
</resources>
